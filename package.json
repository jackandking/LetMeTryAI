{
  "name": "letmetryai",
  "version": "1.0.0",
  "description": "LetMeTryAI website with centralized configuration system",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:unit": "npm test -- util/",
    "test:integration": "npm test -- integration.test.js",
    "test:regression": "npm test -- regression.test.js",
    "test:config": "npm test -- config.test.js",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "eslint --fix",
    "serve": "python3 -m http.server 8080",
    "format": "prettier --write \"**/*.{js,html,css,md}\" --ignore-path .gitignore",
    "quality": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ],
    "collectCoverageFrom": [
      "util/*.js",
      "config.js",
      "!util/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "keywords": [
    "web",
    "configuration",
    "api",
    "images"
  ],
  "author": "LetMeTryAI Team",
  "license": "MIT"
}
